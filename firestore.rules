rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 참여자 수: 누구나 읽기 가능, 누구나 stats/participant의 count만 증가 가능
    match /stats/participant {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if false;
    }
  }
}
